            <select id="dayTime" name="dayTime" class="form-select" aria-label="Default select example">
              <% for(let i = 0; i < findBo.length; i++) { %>
                <option value="<%= findBo[i] %>"><%= findBo[i] %></option>
              <% } %>
            </select>
          </div>
          <hr>
          <button type="submit" class="btn btn-primary">Save</button>
