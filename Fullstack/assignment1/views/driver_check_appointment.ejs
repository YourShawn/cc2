<body>
  <div id="main">
    <div id="main_login">

      <div>
        <%- include("layouts/nav.ejs") -%>
      </div>
      <div class="formDiv">
        <form method="get" action="/admin/save_appointment">
          <h4>Schedules:</h4>
          <div class="mb-3">
            <label for="dateTime">Date:</label>
            <input id="dateTime" name="dateTime" class="form-control" type="date" />
          </div>
          <div class="mb-3">
            <input id="checkAppointmentDayTime" name="checkAppointmentDayTime" type="button" value="9:00">
           <% if(dateList != null && dateList.length>0){ %>
            <% for(let i = 0; i < dateList.length-1; i++) { %>
           <option value="<%= dateList[i] %>"><%= dateList[i] %></option>
           <% } }%>
          </div>
          <hr>
          <button type="submit" class="btn btn-primary">Save</button>
          
        </form>
      </div>
    </div>
  </div>
  <%- include("layouts/footer.ejs") -%>

</body>

